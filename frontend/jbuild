(library
 ((name frontend)
  (preprocess (pps (sedlex_ppx)))
  (libraries (common util sedlex parseTree
              menhirLib))))

(rule
 ((targets (parser.mly))
  (deps    (parser.cppo.mly))
  (action  (run ${bin:cppo} -n ${<} -o ${@}))))


(menhir ((flags ("--table" "--inspection"))    ; --infer --inspection
         (modules (parser))))

(jbuild_version 1)
